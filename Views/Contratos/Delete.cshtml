@model Projeto_GestaoContratos.Models.Contratos

@{
    ViewData["Title"] = "Delete";
}

<div class="form-group row">
    <div class="col-sm-12">

        <!--Título-->
        <h1 class="display-6 text-center">Você tem certeza de que deseja remover o contrato de número @Model.Contrato com nome de @Model.Nome?</h1>
        <hr />

        <!--Ficha-Contrato-->
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Cpf)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Cpf)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Contrato)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Contrato)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Produto)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Produto)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Vencimento)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Vencimento)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DataInclusao)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DataInclusao)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.UsuarioInclusao)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.UsuarioInclusao)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <hr/>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Remover" class="btn btn-danger col-sm-6"/> 
            </div>
            <div class="form-group d-flex justify-content-center">
                <a asp-action="Index" class="mt-4">Voltar para a lista</a>
            </div>
        </form>
    </div>
</div>
