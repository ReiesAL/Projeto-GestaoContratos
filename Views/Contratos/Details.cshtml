@model Projeto_GestaoContratos.Models.Contratos

@{
    ViewData["Title"] = "Details";
}

<div class="form-group row d-flex justify-content-center">
    <div class="col-sm-12">

        <!--Título-->
       <h1 class="display-4 text-center">Detalhes</h1>

        <!--Sub-Título-->
        <h4 class="display-6">@Model.Nome</h4>
        <hr />

        <dl class="col-sm-12 row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Cpf)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Cpf)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Contrato)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Contrato)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Produto)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Produto)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Vencimento)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Vencimento)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DataInclusao)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DataInclusao)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.UsuarioInclusao)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.UsuarioInclusao)
            </dd>
        </dl>
        <hr />
    </div>
    <div class="row justify-content-between">
        <a type="button" asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-secondary col-sm-4">Editar</a>
        <a type="button" asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger col-sm-4">Deletar</a>
        <a class="mt-2" asp-action="Index">Voltar para lista</a>
    </div>
</div>

